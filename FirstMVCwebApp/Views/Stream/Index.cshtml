@model IEnumerable<Stream>

<h1>Stream List</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Stream List</h2>
        </div>
        <div class="col-6 text-end">
            <button type="button" data-bs-toggle="modal" data-bs-target="#AddStreamModal" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Stream
            </button>
        </div>
    </div>

    <br/><br/>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Stream Id
            </th> 
            <th>
                Stream Name
            </th>
                  <th>
                Edit
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="10%" class="id">
                    @obj.StreamId
                </td>
                <td width="50%">
                    @obj.StreamName
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        
                        <button type="button" data-bs-toggle="modal" data-bs-target="#EditStreamModal" class="btn btn-primary mx-2 editStream"><i class="bi bi-pencil-square"></i>Edit</button>
                        <button type="button" data-bs-toggle="modal" data-bs-target="#DeleteStreamModal" class="btn btn-danger mx-2 deleteStream" ><i class="bi bi-pencil-square"></i>Delete</button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

<!-- Add Stream Modal -->
<div class="modal fade" id="AddStreamModal" tabindex="-1" role="dialog" aria-labelledby="AddStreamModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
        <form method="post" asp-action="AddStream">
    <div class="modal-content">
      <div class="modal-body">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Stream</h2>
            <hr/>
        </div>
@*        <div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label>Stream Name</label>
            <input name="StreamName" class="form-control"/>
        </div>
    </div>
      </div>
      <div class="modal-footer">
                  <button type="reset" class="btn btn-secondary" data-bs-dismiss="modal">Reset</button>
        <button type="submit" class="btn btn-primary" style="width:150px">Add Course</button>
      </div>
    </div>
</form>
  </div>
</div>

<!-- Edit Course Modal -->
<div class="modal fade" id="EditStreamModal" tabindex="-1" role="dialog" aria-labelledby="EditStreamModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
              <form method="post" asp-action="EditStream">
    <div class="modal-content">
      <div class="modal-body">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Stream</h2>
            <hr/>
        </div>
@*        <div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label>Stream Name</label>
            <input id="streamName" name="StreamName" class="form-control"/>
                <input name="StreamId" id="streamId" type="text" hidden/>
        </div>
    </div>
      </div>
      <div class="modal-footer">
                  <button type="reset" class="btn btn-secondary" data-bs-dismiss="modal">Reset</button>
        <button type="submit" class="btn btn-primary" style="width:150px">Update Course</button>
      </div>
    </div>
    </form>
  </div>
</div>

<!-- Delete Course Modal -->
<div class="modal fade" id="DeleteStreamModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
          <form asp-action="DeleteStream" method="post">
       <h3>Are you sure ?</h3>
           <input name="StreamId" id="deleteStream" type="text" hidden/>
       <br />
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Yes</button>
        </form>
      </div>
    </div>
  </div>
</div>





