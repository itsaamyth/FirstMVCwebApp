@model IEnumerable<Course>

<h1>Courses List</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Courses List</h2>
        </div>
        <div class="col-6 text-end">
            <button type="button" data-bs-toggle="modal" data-bs-target="#AddCourseModal" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Course
            </button>
        </div>
    </div>

    <br/><br/>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Course Id
            </th> 
            <th>
                Course Name
            </th>
                  <th>
                Edit
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="10%" class="id">
                    @obj.CourseId
                </td>
                <td width="50%">
                    @obj.CourseName
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        
                        <button type="button" data-bs-toggle="modal" data-bs-target="#EditCourseModal" class="btn btn-primary mx-2 editCourse"><i class="bi bi-pencil-square"></i>Edit</button>
                        <button type="button" data-bs-toggle="modal" data-bs-target="#DeleteCourseModal" class="btn btn-danger mx-2 deleteCourse" ><i class="bi bi-pencil-square"></i>Delete</button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

<!-- Add Course Modal -->
<div class="modal fade" id="AddCourseModal" tabindex="-1" role="dialog" aria-labelledby="AddCourseModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
        <form method="post" asp-action="AddCourse">
    <div class="modal-content">
      <div class="modal-body">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Course</h2>
            <hr/>
        </div>
@*        <div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label>Course Name</label>
            <input name="CourseName" class="form-control"/>
        </div>
    </div>
      </div>
      <div class="modal-footer">
                  <button type="reset" class="btn btn-secondary" data-bs-dismiss="modal">Reset</button>
        <button type="submit" class="btn btn-primary" style="width:150px">Add Course</button>
      </div>
    </div>
</form>
  </div>
</div>

<!-- Edit Course Modal -->
<div class="modal fade" id="EditCourseModal" tabindex="-1" role="dialog" aria-labelledby="EditCourseModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
              <form method="post" asp-action="EditCourse">
    <div class="modal-content">
      <div class="modal-body">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Course</h2>
            <hr/>
        </div>
@*        <div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label>Course Name</label>
            <input id="courseName" name="CourseName" class="form-control"/>
                <input name="CourseId" id="CourseId" type="text" hidden/>
        </div>
    </div>
      </div>
      <div class="modal-footer">
                  <button type="reset" class="btn btn-secondary" data-bs-dismiss="modal">Reset</button>
        <button type="submit" class="btn btn-primary" style="width:150px">Update Course</button>
      </div>
    </div>
    </form>
  </div>
</div>

<!-- Delete Course Modal -->
<div class="modal fade" id="DeleteCourseModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
          <form asp-action="DeleteCourse" method="post">
       <h3>Are you sure ?</h3>
           <input name="courseId" id="deleteCourse" type="text" hidden/>
       <br />
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" asp-action="DeleteCourse" class="btn btn-primary">Yes</button>
        </form>
      </div>
    </div>
  </div>
</div>





