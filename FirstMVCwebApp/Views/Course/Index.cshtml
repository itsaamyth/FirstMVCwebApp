@model IEnumerable<Course>
@{
    ViewData["Title"] = "Index";
}


<h1>Courses List</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Courses List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Course" asp-action="AddCourse" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Course
            </a>
        </div>
    </div>

    <br/><br/>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Course Id
            </th> 
            <th>
                Course Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.CourseId
                </td>
                <td width="30%">
                    @obj.CourseName
                </td>
                <td>
@*                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="EditCategory"  class="btn btn-primary mx-2" ><i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="Category" asp-action="DeleteCategory"  class="btn btn-danger mx-2" ><i class="bi bi-trash-fill"></i>Delete</a>

                    </div>*@
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

