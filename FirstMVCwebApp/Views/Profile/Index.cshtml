@model IEnumerable<Profile>
@{
    ViewData["Title"] = "Index";
}


<h1>Index Profile</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Profile List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Profile" asp-action="CreateProfile" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Profile
            </a>
        </div>
    </div>

    <br/><br/>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Profile Id
            </th> 
            <th>
                Name
            </th>
            <th>
                Phone
            </th>
                        <th>
               Email
            </th>
                        <th>
                Age
            </th>
                        <th>
                Gender
            </th>
                        <th>
                Address 
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="8%">
                    @obj.Id
                </td>
                <td width="20%">
                    @obj.Name
                </td>
                                <td width="20%">
                    @obj.Phone
                </td>
                                <td width="20%">
                    @obj.Email
                </td>
                                <td width="5%">
                    @obj.Age
                </td>
                                <td width="5%">
                    @obj.Gender
                </td>
                                <td width="40%">
                    @obj.Address
                </td>
                <td> 
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Profile" asp-action="EditProfile" asp-route-id="@obj.Id" class="btn btn-primary mx-2" ><i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="Profile" asp-action="DeleteProfile" asp-route-id="@obj.Id" class="btn btn-danger mx-2" ><i class="bi bi-trash-fill"></i>Delete</a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

